<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sbs.example.lolHi.dao.ArticleDao">

	<select id="getArticles" resultMap="article">
		SELECT A.*,
		M.name AS extra__wrtier
		FROM article AS A
		INNER JOIN member AS M
		ON A.memberNum = M.num
		ORDER BY A.num DESC
		<if test = "limitFrom != null and limitTake != null">
			 limit ${limitFrom}, ${limitTake}
		</if>
	</select>
	
	<select id="getArticleByNum" resultType="Article">
		SELECT A.*
		FROM article AS A
		WHERE num = #{num}
	</select>

	<delete id="doDeleteArticleByNum">
		DELETE FROM article
		WHERE num = #{num}
	</delete>

	<update id="doModifyArticleByNum">
		UPDATE article
		<set>
			updateDate = NOW(),
			<if test="title != null">
				title = #{title},
			</if>
			<if test="body != null">
				`body` = #{body},
			</if>
		</set>
		WHERE num = #{num}
	</update>

	<insert id="doWriteArticleByNum" useGeneratedKeys="true" keyProperty="num">
		INSERT INTO article
		<set>
			regDate = NOW(),
			updateDate = NOW(),
			memberNum = #{memberNum},
			title = #{title},
			body = #{body}
		</set>
	</insert>
	
	<select id ="totalCount" resultType="int">
		SELECT COUNT(*) 
		FROM article
	</select>
	
		<resultMap type="Article" id="article">
			<id property="num" column="num" />
			<id property="regDate" column="regDate" />
			<id property="updateDate" column="updateDate" />
			<id property="title" column="title" />
			<id property="body" column="body" />
			<id property="memberNum" column="memberNum" />
		
		<association property="extra" javaType="map">
			<id property="writer" column="extra__writer" />
		</association>
	</resultMap>
	
</mapper>