	<insert id="doLike" useGeneratedKeys="true" keyProperty="num">
		INSERT INTO `reply`
		<set>
			regDate = NOW(),
			updateDate = NOW(),
			memberNum = #{memberNum},
			relNum = #{relNum},
			relTypeCode = #{relTypeCode},
			point = 1
		</set>
	</insert>
